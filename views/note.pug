extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Create a new Note

        // register form
        form(method='POST' action='/note')
          div.form-group
            label(for='title') Title:
            input#name.form-control(type='text', placeholder='Title',name='title')
          div.form-group
            label(for='description') Description:
            textarea#description.form-control(rows='4', cols='50',name='description')
          button.btn.btn-primary(type='submit') Post